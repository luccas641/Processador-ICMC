LIBRARY IEEE;
USE  IEEE.STD_LOGIC_1164.all;
USE  IEEE.STD_LOGIC_ARITH.all;
USE  IEEE.STD_LOGIC_UNSIGNED.all;

ENTITY TEXT_DRAWER IS
	PORT(
			CLK : IN STD_LOGIC;
			RST : IN STD_LOGIC;
			iDRAW : IN STD_LOGIC;
			iCHAR : IN STD_LOGIC_VECTOR(6 DOWNTO 0);
			iXPOS : IN STD_LOGIC_VECTOR(5 DOWNTO 0);
			iYPOS : IN STD_LOGIC_VECTOR(4 DOWNTO 0);
			iCOLOR : IN STD_LOGIC_VECTOR(3 DOWNTO 0);
			iSIZE : IN STD_LOGIC;
			
			oDRAW : out STD_LOGIC;
			oCHAR : out STD_LOGIC_VECTOR(6 DOWNTO 0);
			oXPOS : out STD_LOGIC_VECTOR(5 DOWNTO 0);
			oYPOS : out STD_LOGIC_VECTOR(4 DOWNTO 0);
			oCOLOR : out STD_LOGIC_VECTOR(3 DOWNTO 0);
			oSIZE : out STD_LOGIC;
		);
END TEXT_DRAWER;

ARCHITECTURE main OF TEXT_DRAWER IS
SIGNAL STATE 	: STD_LOGIC_VECTOR(3 DOWNTO 0);
BEGIN

end architecture;